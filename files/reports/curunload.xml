<?xml version="1.0" encoding="windows-1251"?>
<!-- Шаблон для формирования выгрузки результатов текущих продаж в формате Домино. -->
<report>
<select query="select * from clview2 left join cdata on cdata.checknum = clview2.checknum and cdata.shift = clview2.shift where clview2.shift = $shift_number$ and clview2.checknum = (select max(checknum) from clview2 where shift = $shift_number$) and cdata.closed = 1">
<text>T=</text>
<var name="checknum" minwidth="8" align="right" fillsymbol="0"/><text>,</text>
<var name="ttime" dateformat="dd/mm/yyyy"/><text>,</text>
<var name="ttime" dateformat="hh:mi"/><text>,"</text>
<var name="stropcode" minwidth="2" align="right" fillsymbol="0"/><text>","$division$",1,"</text>
<var name="bcode"/><text>",1,1,1,</text>
<var name="real_price" afterpoint="5" minwidth="13" align="right"/><text>,1,1,1,</text>
<var name="real_quant" minwidth="11" maxwidth="11" numberformat="+011.3"/><text>,</text>
<var name="scode" minwidth="3" align="right"/><text>,$cash_code$,$shift_number$,</text>
<var name="vcode"/><text>,</text>
<var name="deptcode"/><text>,</text>
<var name="cardno"/><br/>
</select>
</report>
