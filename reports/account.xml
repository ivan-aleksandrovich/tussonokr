<?xml version="1.0" encoding="UTF-8"?>
<!-- Шаблон уведомления выполения привязки -->
<report name="account" type="document" cached="true" title="подтверждение привязки">
  <printer op="setfont" size="enlarge"/><br/>
  <text>НОМЕР СЧЕТА</text><br/>
  <text>$account.number$</text><br/>
  <text>$account.providerName$</text><br/><br/>
  <printer op="resetfont"/><br/><br/>

  <text align="center" fillsymbol=" " maxwidth="all">Абонент подтверждает правильность ввода номера</text><br/>
  <!-- <text align="center" fillsymbol=" " maxwidth="all">Номер терминала $account.providerObject.terminalObject.terminalCode$</text><br/> -->
  <text align="center" fillsymbol=" " maxwidth="all">Телефон службы поддержки</text><br/>
  <text align="center" fillsymbol=" " maxwidth="all">8-888-888-88-88</text><br/>
  <select query="select date_format(CURRENT_TIMESTAMP, '%d/%m/%Y %H:%i') cdt">
    <text align="center" fillsymbol=" " maxwidth="all">Дата печати $cdt$</text>
    <br/>
  </select>
</report>
