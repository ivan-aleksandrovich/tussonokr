<?xml version="1.0" encoding="UTF-8"?>
<!-- Шаблон чека продажи. Объединение одинаковых позиций и группировка по полю артикул. -->
<report name="error-documents" type="document" cached="false" title="Чеки с ошибками">
    <text align="center" fillsymbol=" " maxwidth="all">ЧЕКИ ЗАКРЫТЫЕ С ОШИБКАМИ</text> <br/>
    <text fillsymbol="-" maxwidth="all"></text> <br/>
    <op var="count" set="0"/>
    <select query="SELECT a.checknum, a.time_end, a.sumb, b.shiftnum FROM documents.document a
                   join documents.workshift b on a.workshiftid = b.workshiftid
                   where c_link &lt;&gt; 0 and closed &lt;&gt; 2
                   order by shiftnum, checknum">
        <text>ЧЕК </text>
        <var name="checknum"/>
        <var name="time_end" dateformat="dd.mm.yyyy hh:mi" maxwidth="all" align="right"/> <br/>
        <text>СМЕНА </text>
        <var name="shiftnum"/>
        <var name="sumb" numberformat=".2" maxwidth="all" align="right"/> <br/> <br/>
        <op var="count" plus="1"/>
    </select>
    <text fillsymbol="-" maxwidth="all"></text> <br/>
    <text>ВСЕГО </text>
    <var name="count" numberformat=".0" maxwidth="all" align="right"/> <br/>
</report>
