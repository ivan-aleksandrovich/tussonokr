<?xml version="1.0" encoding="UTF-8"?>
<!-- Шаблон акта о возврате -->
<report name = "backreport" type = "shift" cached="false" title = "Отчет по возврату">
<text fillsymbol="-" maxwidth="all"/><br/>
<text align="center" fillsymbol=" ">АКТ</text><br/>
<text align="center" fillsymbol=" ">О ВОЗВРАТЕ ДЕНЕЖНЫХ СУММ ПОКУПАТЕЛЯМ</text><br/>
<text align="center" fillsymbol=" ">(КЛИЕНТАМ) ПО НЕИСПОЛЬЗОВАННЫМ</text><br/>
<text align="center" fillsymbol=" ">КАССОВЫМ ЧЕКАМ</text><br/>
<text align="center" fillsymbol=" ">(в том числе по ошибочно пробитым</text><br/>
<text align="center" fillsymbol=" ">кассовым чекам)</text><br/>
<text fillsymbol="-" maxwidth="all"/><br/>
<br/>
<text minwidth="7">КАССА</text><text>$cash.code$</text><br/>
<text minwidth="7">СМЕНА</text><text>$shift.num$</text><br/>
<text fillsymbol="-" maxwidth="all"/><br/>
<text>№ ВОЗВР. ЧЕКА       СУММА ВОЗВРАТА (РУБ)</text><br/>
<text fillsymbol="-" maxwidth="all"/><br/>
<select query="SELECT workshiftid, frdocnum, -(sumb) FROM documents.document where doctype in (2,25) and sumb not in (0) and workshiftid = $shift.id$">
		 <var name="frdocnum" align="left" minwidth="30"/><var name="-(sumb)" numberformat="10.2"/><br/>
</select>
<text fillsymbol="-" maxwidth="all"/><br/> 
<text align="center" fillsymbol=" ">Выдано покупателям (клиентам) по</text><br/> 
<text align="center" fillsymbol=" ">возвращенным ими кассовым чекам (по</text><br/>
<text align="center" fillsymbol=" ">ошибочно пробитым чекам) сокгласно акту</text><br/>
<text align="center" fillsymbol=" ">на сумму:</text><br/>
<select query="SELECT workshiftid, frdocnum, -sum(sumb), (-sum(sumb) - round(-sum(sumb),0)) q FROM documents.document where doctype in (2,25) and sumb not in (0) and workshiftid = $shift.id$">
<var name="-sum(sumb)" numberformat="10.2"/><text> рублей  </text>
<br/>
<text align="left" fillsymbol="_">Приложение</text><br/>
<text align="center" fillsymbol=" ">ЧЛЕНЫ КОМИССИИ:</text><br/>
<text align="center" fillsymbol=" ">ЗАВЕДУЮЩИЙ ОТДЕЛОМ(СЕКЦИЕЙ)</text><br/>
<text align="center" fillsymbol=" ">СТАРШИЙ КАССИР</text><br/>
<text align="center" fillsymbol=" ">КАССИР-ОПЕРАЦИОНИСТ</text><br/>
<text fillsymbol="-" maxwidth="all"/><br/>
</select>
</report>
